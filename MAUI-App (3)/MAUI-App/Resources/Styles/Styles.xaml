<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- FONT FAMILIES -->
    <FontFamily x:Key="PoppinsRegular">PoppinsRegular</FontFamily>
    <FontFamily x:Key="PoppinsSemiBold">PoppinsSemiBold</FontFamily>

    <!-- BUTTON STYLE -->
    <Style TargetType="Button">
        <Setter Property="FontFamily" Value="{StaticResource PoppinsSemiBold}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="BackgroundColor" Value="{StaticResource PastelLightBlue}" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="CornerRadius" Value="14" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="Margin" Value="0,4" />
    </Style>

    <!-- ENTRY & EDITOR STYLES -->
    <Style TargetType="Entry">
        <Setter Property="FontFamily" Value="{StaticResource PoppinsSemiBold}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="BackgroundColor" Value="{StaticResource PastelPink}" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="Margin" Value="0,4" />
    </Style>
    <Style TargetType="Editor">
        <Setter Property="FontFamily" Value="{StaticResource PoppinsRegular}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Margin" Value="0,4" />
        <Setter Property="AutoSize" Value="TextChanges" />
    </Style>

    <!-- CARD/FRAME STYLE (NOTE CARD) -->
    <Style TargetType="Frame" x:Key="NoteCardFrameStyle">
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="CornerRadius" Value="22" />
        <Setter Property="Margin" Value="8,8,8,0" />
        <Setter Property="Padding" Value="18" />
    </Style>

    <!-- LABEL STYLES -->
    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource PoppinsRegular}" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="TextColor" Value="Black" />
    </Style>
    <Style TargetType="Label" x:Key="NoteCardTitle">
        <Setter Property="FontFamily" Value="{StaticResource PoppinsSemiBold}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="TextColor" Value="Black" />
    </Style>
    <Style TargetType="Label" x:Key="NoteCardSubtitle">
        <Setter Property="FontFamily" Value="{StaticResource PoppinsRegular}" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="Opacity" Value="0.7"/>
    </Style>
    <Style TargetType="Label" x:Key="NoteCardDate">
        <Setter Property="FontFamily" Value="{StaticResource PoppinsRegular}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="Opacity" Value="0.55"/>
    </Style>

    <!-- GRID VIEW STYLE (OPTIONAL) -->
    <Style TargetType="CollectionView">
        <Setter Property="Margin" Value="0,12,0,0" />
    </Style>

</ResourceDictionary>
