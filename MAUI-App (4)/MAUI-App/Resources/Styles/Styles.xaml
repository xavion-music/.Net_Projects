<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui">
    <Style x:Key="NoteCard" TargetType="Border">
        <Setter Property="Stroke" Value="Transparent"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="BackgroundColor" Value="{DynamicResource PastelLightBlue}"/>
        <Setter Property="Padding" Value="14"/>
        <Setter Property="Margin" Value="8,8,8,8"/>
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="20"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="Black" Offset="2,4" Radius="8" Opacity="0.10"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="NoteCardTitle" TargetType="Label">
        <Setter Property="FontFamily" Value="PoppinsBold"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="TextColor" Value="{DynamicResource CardText}"/>
        <Setter Property="LineBreakMode" Value="TailTruncation"/>
    </Style>

    <Style x:Key="NoteCardBody" TargetType="Label">
        <Setter Property="FontFamily" Value="PoppinsRegular"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="TextColor" Value="{DynamicResource CardText}"/>
        <Setter Property="LineBreakMode" Value="WordWrap"/>
    </Style>
</ResourceDictionary>
