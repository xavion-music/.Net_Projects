<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Notes.Models"
             x:Class="Notes.Views.NotePage"
             Title="Note">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="24" Spacing="20">
                <Entry Text="{Binding Note.Title}" Placeholder="Title"
                       FontFamily="PoppinsBold" FontSize="20"/>
                <Editor Text="{Binding Note.Text}" Placeholder="Type your note here..."
                        FontFamily="PoppinsRegular" FontSize="16"
                        AutoSize="TextChanges" HeightRequest="120"/>
                <Border StrokeShape="RoundRectangle 16" Margin="0,0,0,8">
                    <Image Source="{Binding Note.PhotoPath}" Aspect="AspectFill"
                           HeightRequest="200" WidthRequest="200"/>
                </Border>
                <Button Text="Take Photo"
                        Command="{Binding TakePhotoCommand}"
                        BackgroundColor="{StaticResource PastelLightBlueBrush}"
                        TextColor="Black"
                        FontFamily="PoppinsBold"
                        CornerRadius="16"
                        HeightRequest="48"/>
                <Button Text="Save"
                        Command="{Binding SaveCommand}"
                        BackgroundColor="{StaticResource PastelBlueBrush}"
                        TextColor="Black"
                        FontFamily="PoppinsBold"
                        CornerRadius="16"
                        HeightRequest="48"/>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
