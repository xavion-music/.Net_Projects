<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Notes.Models"
             xmlns:converters="clr-namespace:Notes.Converters"
             x:Class="Notes.Views.AllNotesPage"
             Title="Notes">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <VerticalStackLayout Padding="18" Spacing="10">
        <Button Text="Add Note" 
                Clicked="OnAddNoteClicked"
                BackgroundColor="#2B0B98"
                TextColor="White"
                CornerRadius="12"/>
        <CollectionView x:Name="NotesCollection"
                        ItemsSource="{Binding Notes}"
                        Margin="0,12,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="#512BD4"
                           Margin="6"
                           Padding="12"
                           CornerRadius="14"
                           HasShadow="True">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="{Binding Title}"
                                   FontAttributes="Bold"
                                   FontSize="18" />
                            <Label Text="{Binding Content}"
                                   FontSize="15" />
                            <Image Source="{Binding PhotoPath}"
                                   HeightRequest="80"
                                   Aspect="AspectFill"
                                   IsVisible="{Binding PhotoPath, Converter={StaticResource NullToBoolConverter}}"
                                   Margin="0,5"/>
                            <HorizontalStackLayout Spacing="8"
                                                   Margin="0,8">
                                <Button Text="View/Edit"
                                        Clicked="OnViewNoteClicked"
                                        CornerRadius="10"/>
                                <Button Text="Delete"
                                        Clicked="OnDeleteNoteClicked"
                                        BackgroundColor="Red"
                                        TextColor="White"
                                        CornerRadius="10"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
