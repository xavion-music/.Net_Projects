<Window x:Class="MTPalakChaudhary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MTPalakChaudhary"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Label Content="Players" Canvas.Left="138" Canvas.Top="48" FontWeight="Bold" FontSize="14"/>
        <ListBox Height="300" Width="118" Canvas.Left="138" Canvas.Top="79" HorizontalAlignment="Center" VerticalAlignment="Top" d:ItemsSource="{d:SampleData ItemCount=5}" TabIndex="9" FontWeight="Bold" FontSize="14" SelectionChanged="ListBox_SelectionChanged" />

        <GroupBox Height="58" Header="Select Type of Player" Width="379" Canvas.Left="282" Canvas.Top="52" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" FontSize="14">
            <Canvas>
                <RadioButton Content="Hockey" Height="23" Width="77" Canvas.Left="11" Canvas.Top="10" TabIndex="10" HorizontalAlignment="Left" VerticalAlignment="Center" Checked="RadioButton_Checked" />
                <RadioButton Content="Basketball" Height="16" Width="129" Canvas.Left="119" Canvas.Top="10" TabIndex="11" HorizontalAlignment="Left" VerticalAlignment="Center" Checked="RadioButton_Checked_1" />
                <RadioButton Content="Baseball" Height="16" Width="104" Canvas.Left="253" Canvas.Top="10" TabIndex="11" HorizontalAlignment="Left" VerticalAlignment="Center" Checked="RadioButton_Checked_2" />
            </Canvas>
        </GroupBox>

        <GroupBox Height="131" Header="Input the Player's Information" Width="278" Canvas.Left="282" Canvas.Top="125" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Canvas>
                <Label Content="Player Name" Canvas.Left="10" Canvas.Top="10"/>
                <Label Content="Team Name" Canvas.Left="10" Canvas.Top="41"/>
                <Label Content="Games Played" Canvas.Left="10" Canvas.Top="72"/>
                <TextBox Canvas.Left="136" TextWrapping="NoWrap" Canvas.Top="14" Width="120" TabIndex="0" TextChanged="TextBox_TextChanged"/>
                <TextBox Canvas.Left="136" TextWrapping="NoWrap" Canvas.Top="45" Width="120" TabIndex="1" TextChanged="TextBox_TextChanged_1"/>
                <TextBox Canvas.Left="136" TextWrapping="NoWrap" Canvas.Top="76" Width="120" TabIndex="1" HorizontalAlignment="Center" VerticalAlignment="Top" TextChanged="TextBox_TextChanged_2"/>
            </Canvas>
        </GroupBox>

        <Button Content="Calculate" Canvas.Left="577" Canvas.Top="136" IsDefault="True" Height="30" Width="84" TabIndex="6" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Content="Clear" Canvas.Left="577" Canvas.Top="181" Height="30" Width="84" TabIndex="7" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Button_Click_1" />
        <Button Content="Close" Canvas.Left="577" Canvas.Top="226" Height="30" Width="84" IsCancel="True" TabIndex="8" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Button_Click_2" />

        <GroupBox Height="102" Header="Enter Player Stats" Width="278" Canvas.Left="282" Canvas.Top="277" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Canvas Margin="0,0,-2,0">
                <Label Content="Assists" Canvas.Left="10" Canvas.Top="10"/>
                <Label Content="Goals" Canvas.Left="10" Canvas.Top="41" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox Canvas.Left="136" TextWrapping="NoWrap" Canvas.Top="14" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center" TabIndex="3" TextChanged="TextBox_TextChanged_3"/>
                <TextBox Canvas.Left="136" TextWrapping="NoWrap" Canvas.Top="44" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top" TabIndex="4" TextChanged="TextBox_TextChanged_4"/>
            </Canvas>
        </GroupBox>

        <Label Content="Points" Canvas.Left="592" Canvas.Top="266" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <Label Canvas.Left="577" Canvas.Top="295" Height="84" Width="84" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFBAD5FF" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="36"/>
    </Canvas>
</Window>
