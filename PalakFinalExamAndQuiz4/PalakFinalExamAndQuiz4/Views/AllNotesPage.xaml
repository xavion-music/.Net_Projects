<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:KarandeepFinalExam.Models"
             xmlns:converters="clr-namespace:KarandeepFinalExam.Converters"
             x:Class="KarandeepFinalExam.Views.AllNotesPage"
             Title="All Notes">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add"
                     Clicked="Add_Clicked"
                     IconImageSource="plus_sign.png" />
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>


    <CollectionView x:Name="notesCollection"
                    ItemsSource="{Binding Notes}"
                    Margin="10"
                    SelectionMode="Single"
                    SelectionChanged="notesCollection_SelectionChanged">

        <CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
        </CollectionView.ItemsLayout>

        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:Note">
                <Frame HasShadow="True"
                       BackgroundColor="#FFFFFF"
                       BorderColor="LightGray"
                       CornerRadius="12"
                       Padding="10"
                       Margin="5,0">

                    <Grid ColumnDefinitions="100, *" RowDefinitions="Auto, Auto" ColumnSpacing="10">

                        <!-- Image thumbnail on left -->
                        <Image Grid.RowSpan="2"
                            Grid.Column="0"
                            HeightRequest="80"
                            WidthRequest="100"
                            Aspect="AspectFill"
                            BackgroundColor="#eee">
                            <Image.Source>
                                <FileImageSource File="{Binding ImagePath}" />
                            </Image.Source>
                        </Image>

                        
                        
                        <!-- Note Text -->
                        <Label Grid.Column="1"
                               Grid.Row="0"
                               Text="{Binding Text}"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="Black"
                               LineBreakMode="TailTruncation"
                               MaxLines="2" />

                        <!-- Date -->
                        <Label Grid.Column="1"
                               Grid.Row="1"
                               Text="{Binding Date}"
                               FontSize="12"
                               FontAttributes="Italic"
                               TextColor="DarkGray"/>
                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
