@page
@model RazorPagesEmployeeCars.Pages.Cars.DeleteModel
@{
    ViewData["Title"] = "Delete Car";
}
<h1>Delete Car</h1>

<h3>Are you sure you want to delete this car?</h3>
<div>
    <h4>@Model.Car.Make @Model.Car.Model</h4>
    <p>Year: @Model.Car.Year</p>
    <p>License Plate: @Model.Car.LicensePlate</p>
    <p>Employee: @Model.Car.Employee?.FirstName @Model.Car.Employee?.LastName</p>
</div>

<form method="post">
    <input type="hidden" asp-for="Car.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
