@page
@model RazorPagesEmployeeCars.Pages.Cars.IndexModel
@{
    ViewData["Title"] = "Cars";
}
<h1>Cars</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Add New Car</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>License Plate</th>
            <th>Employee</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Car)
        {
            <tr>
                <td>@car.Make</td>
                <td>@car.Model</td>
                <td>@car.Year</td>
                <td>@car.LicensePlate</td>
                <td>@car.Employee?.FirstName @car.Employee?.LastName</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@car.Id">Edit</a> |
                    <a asp-page="Details" asp-route-id="@car.Id">Details</a> |
                    <a asp-page="Delete" asp-route-id="@car.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
