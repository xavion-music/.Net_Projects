@page
@model RazorPagesEmployeeCars.Pages.Employees.DeleteModel
@{
    ViewData["Title"] = "Delete Employee";
}
<h1>Delete Employee</h1>

<h3>Are you sure you want to delete this employee?</h3>
<div>
    <h4>@Model.Employee.FirstName @Model.Employee.LastName</h4>
    <p>Email: @Model.Employee.Email</p>
    <p>Phone: @Model.Employee.PhoneNumber</p>
</div>

<form method="post">
    <input type="hidden" asp-for="Employee.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
