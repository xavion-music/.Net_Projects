@page
@model RazorPagesEmployeeCars.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Employees";
}
<h1>Employees</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Add New Employee</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Cars</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model.Employee)
        {
            <tr>
                <td>@emp.FirstName</td>
                <td>@emp.LastName</td>
                <td>@emp.Email</td>
                <td>@emp.PhoneNumber</td>
                <td>@(emp.Cars?.Count ?? 0)</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@emp.Id">Edit</a> |
                    <a asp-page="Details" asp-route-id="@emp.Id">Details</a> |
                    <a asp-page="Delete" asp-route-id="@emp.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
