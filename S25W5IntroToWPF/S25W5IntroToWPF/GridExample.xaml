<Window x:Class="S25W5IntroToWPF.GridExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S25W5IntroToWPF"
        mc:Ignorable="d"
        Title="GridExample" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="Black"
                Background="LightYellow" Margin="5"/>
        <Label Content="1" Grid.Row="0" Grid.Column="0" FontSize="20" FontWeight="Bold" Padding="10" HorizontalAlignment="Center"
               VerticalAlignment="Center"/>

        <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" BorderBrush="Black"
        Background="LightPink" Margin="5"/>
        <Label Content="1" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" FontSize="20" FontWeight="Bold" Padding="10" HorizontalAlignment="Center"
       VerticalAlignment="Center"/>

        <Border Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2" BorderBrush="Black"
        Background="MediumPurple" Margin="5"/>
        <Label Content="1" Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2" FontSize="20" FontWeight="Bold" Padding="10" HorizontalAlignment="Center"
       VerticalAlignment="Center"/>

        <Border Grid.Row="1" Grid.Column="2"
Grid.RowSpan="2" Margin="5" BorderBrush="Black"
BorderThickness="1" Background="LightGreen"/>
        <Label Grid.Row="1" Grid.Column="2" Padding="10"
Content="4"/>
        <Border Grid.Row="1" Grid.Column="3" Margin="2"
BorderBrush="Black" BorderThickness="1"
Background="Orange"/>
        <Label Grid.Row="1" Grid.Column="3" Padding="10"
Content="5"/>
        <Border Grid.Row="2" Grid.Column="3"
Grid.RowSpan="2" Margin="2" BorderBrush="Black"
BorderThickness="1" Background="Cyan"/>
        <Label Grid.Row="2" Grid.Column="3" Padding="10"
Content="6"/>
    </Grid>
</Window>
