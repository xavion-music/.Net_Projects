<Window x:Class="S25W5IntroToWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S25W5IntroToWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnOk" Content="OK" HorizontalAlignment="Left" Margin="535,0,0,0" VerticalAlignment="Center" Height="76" Width="124" IsCancel="True" Click="btnOk_Click"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="219" Height="48" FontSize="20" GotFocus="txtName_GotFocus" LostFocus="txtName_LostFocus" />
        <Label Content="Enter Your Name" HorizontalAlignment="Left" Margin="84,0,0,0" VerticalAlignment="Center" Width="177" FontSize="22"/>
        <Button x:Name="btnGridExamples" Content="Button" HorizontalAlignment="Left" Margin="290,285,0,0" VerticalAlignment="Top" Height="74" Width="125" Click="btnGridExamples_Click"/>

    </Grid>
</Window>
