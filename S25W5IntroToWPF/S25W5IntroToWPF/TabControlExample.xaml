<Window x:Class="S25W5IntroToWPF.TabControlExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S25W5IntroToWPF"
        mc:Ignorable="d"
        Title="TabControlExample" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Personal Information">
                <Canvas>
                    Label x:Name="lblName" Content="Name" Canvas.Left="50" Canvas.Top="50" Height="30" Width="100"/>
                    <TextBox x:Name="txtName" Canvas.Left="150" Canvas.Top="50" Width="200" Height="30" FontSize="16"/>
                    <Label x:Name="lblAge" Content="Age" Canvas.Left="50" Canvas.Top="100" Height="30" Width="100"/>
                </Canvas>
        </TabControl>
    </Grid>
</Window>
